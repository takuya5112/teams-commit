<%= form_with model: group, local: true do |f| %>
  <% if group.errors.any? %>
  <div class="SettingGroupForm__errors">
    <h2>
      <%= "#{group.errors.full_messages.count}件のエラーが発生しました。" %>
    </h2>
    <ul>
      <% group.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
  <div class="SettingGroupForm__field">
    <div class="SettingGroupForm__leftField">
      <%= f.label :name, "グループ名", class: 'SettingGroupForm__label' %>
    </div>
    <div class="SettingGroupForm__rightField">
      <%= f.text_field :name, class: 'SettingGroupForm__input', placeholder: 'グループ名を入力してください' %>
    </div>
  </div>
  <div class="SettingGroupForm__field">
    <div class="SettingGroupForm__leftField">
      <label class="SettingGroupForm__label">チャットメンバーを追加</label>
    </div>
    <div class="SettingGroupForm__rightField MemberList">
      <%= f.collection_check_boxes :user_ids, User.all, :id, :name %>
    </div>
  </div>
  <div class="SettingGroupForm__field">
    <div class="SettingGroupForm__leftField"></div>
    <div class="SettingGroupForm__rightField">
      <%= f.submit class: 'SettingGroupForm__button GroupButton' %>
    </div>
  </div>
<% end %>


